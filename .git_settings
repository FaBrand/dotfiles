[credential]
    # for linux only
    helper = store

[alias]
    # for gerrit only
    prr = pull --rebase
    pdm = push origin HEAD:refs/drafts/master
    pm = push origin HEAD:refs/for/master
    p = push origin HEAD:refs/heads/master
    st = status
    adog = log --all --decorate --oneline --graph
    co = checkout
    br = branch
    ca = commit --amend
    can = commit --amend --no-edit
    ci = commit
    co = checkout
    df = diff
    dc = diff --cached
    rh = reset --hard origin/master

[branch]
    # imply tracking
    autosetupmerge = always
    # pull --rebase default
    autosetuprebase = always

[core]
    eol = native
    excludesfile = ~/.gitignore

[help]
    # Automatically correct and execute mistyped commands
    autocorrect = 1

[init]
    templatedir = ~/.git_template

[user]
    # force user config on a per repo basis if no global user config
    useconfigonly = true
